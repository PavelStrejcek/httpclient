{
    "name": "brainweb/http-client",
    "description": "A simple HTTP client with retry logic and error logging",
    "keywords": [
        "http",
        "client",
        "retry",
        "backoff",
        "resilience"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Pavel Strejcek",
            "email": "application@brainweb.cz"
        }
    ],
    "support": {
        "issues": "https://github.com/PavelStrejcek/http-client/issues",
        "source": "https://github.com/PavelStrejcek/http-client"
    },
    "require": {
        "php": "^8.5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.91",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "BrainWeb\\HttpClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BrainWeb\\HttpClient\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test:unit": "phpunit --testsuite Unit",
        "test:functional": "phpunit --group functional",
        "test": [
            "@test:unit",
            "@test:functional"
        ],
        "test:coverage": "phpunit --coverage-html coverage",
        "cs:check": "php-cs-fixer fix --dry-run --diff",
        "cs:fix": "php-cs-fixer fix",
        "stan": "phpstan analyse --memory-limit=512M",
        "all": [
            "@cs:check",
            "@stan",
            "@test"
        ]
    }
}